<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
        >
  <ui:style>

    .addExpenseDivContainer {
      height: auto;
      margin: 5px auto;
      padding: 2px;
    }

    .editorContainer {
      height: 100px;
      vertical-align: middle;
      padding:5px;
    }

    .editorContainer div,tr,td {
    margin:2px;
    }


  </ui:style>
  <g:HTMLPanel addStyleNames="{style.editorContainer}">

    <g:HorizontalPanel addStyleNames="{style.addExpenseDivContainer}">
      <g:Label text="Date:"/>
      <b:TextBox ui:field="expenseDate" placeholder="Date"/>
      <dp:DatePicker ui:field="datePicker"/>
      <g:Label text="Price"/>
      <b:TextBox ui:field="expensePrice" placeholder="on ..."/>
      <g:Label text="Title:"/>
      <b:TextBox ui:field="name" placeholder="price ... "/>
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder>