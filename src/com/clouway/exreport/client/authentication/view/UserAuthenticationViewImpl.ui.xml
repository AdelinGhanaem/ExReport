<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:com.clouway.exreport.client.authentication.view'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
  <ui:style src="authenticationsStyle.css"/>

  <g:HTMLPanel addStyleNames="{style.containerPanel}">

    <div class="{style.headerPanel}">

      <b:WellForm type="HORIZONTAL" addStyleNames="{style.formContainer}">

        <b:ControlGroup>
          <m:UserEditor ui:field="editor" />
          <b:Button ui:field="logIn" type="INVERSE" text="log in" addStyleNames="{style.button}"/>
          <b:Button ui:field="newAccount" type="SUCCESS" text="Sign up"/>
        </b:ControlGroup>

      </b:WellForm>
      <div><g:Label ui:field="errorsLabel"/></div>

    </div>

  </g:HTMLPanel>
</ui:UiBinder>