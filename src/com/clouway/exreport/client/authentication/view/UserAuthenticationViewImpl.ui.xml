<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:com.clouway.exreport.client.authentication.view'>
  <g:HTMLPanel>
    <g:VerticalPanel ui:field="panel">
      <g:DecoratorPanel>
        <g:VerticalPanel>
          <m:UserEditor ui:field="editor"/>
          <g:HorizontalPanel>
            <g:Button ui:field="logIn" text="log in"/>
            <g:Button ui:field="newAccount" text="Sign up"/>
          </g:HorizontalPanel>
        </g:VerticalPanel>
      </g:DecoratorPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>